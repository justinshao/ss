@{
    ViewBag.Title = "商户管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="/Scripts/parking/parkseller.js?v=1" type="text/javascript"></script>
<script src="/Scripts/easyui/tree-searh-extend.js" type="text/javascript"></script>
<div class="easyui-layout" style="height: 500px; width: 500px" fit="true">
    <div region="west" title="小区信息" style="width: 25%" collapsible="false">
          <div style="margin:5px 0px 5px 5px; text-align:left">
          <input type="text" id="txtSearchTreeContent" style="width:150px" class="my_textbox"/>&nbsp;<input type="button" style="width: 60px;height: 28px" value="搜索" class="easyui-linkbutton" onclick="btnSearchTreeContent()"/>
      </div>
        <ul id="villageTree"></ul>
    </div>
    <div region="center" title="商户管理">
       <div style="margin: 3px 0px 3px 10px">
            &nbsp;<span>商户名称</span>：<input class="easyui-textbox" style="width: 150px; height: 25px" id="txtParkSellerName" />
            &nbsp; <a href="javascript:void(0)" id="btnQueryData" class="easyui-linkbutton" style="width: 50px;
                height: 28px" onclick="return QueryParkSellerData()">查询</a>
        </div>
        <div style="height: 94.5%">
            <table fit="true" id="tableParkSeller"> </table>
        </div>
    </div>
</div>


<div id="divParkSellerBox" style="display: none">
    <form id="divParkSellerBoxForm" class="easyui-form">
    <div title="商户编辑" style="padding: 20px;">
        <input type="hidden" name="SellerID" id="hiddEditSellerID" />
        <input type="hidden" name="VID" id="VID" />
        <table cellpadding="3" class="table_open_window_edit">
          <tr>
            <td align="right">
                    商家号：
                </td>
                <td>
                    <input id="SellerNo" name="SellerNo" required="true" class="easyui-validatebox form-control"  missingmessage="商家名称不能为空" style="width: 200px" />
                </td>
            </tr>
            <tr>
                <td align="right">
                    商家名称：
                </td>
                <td>
                    <input id="SellerName" name="SellerName" required="true" class="easyui-validatebox form-control"  missingmessage="商家名称不能为空" style="width: 200px" />
                </td>
            </tr>
           <tr>
                <td align="right">
                    商家地址：
                </td>
                <td>
                    <input id="Addr" name="Addr" class="easyui-validatebox form-control" style="width: 200px" />
                </td>
            </tr>
            <tr class="trPassword">
             <td align="right">
                    商家密码：
                </td>
                <td>
                    <input id="PWD" type="password" name="PWD" class="easyui-validatebox form-control"  style="width: 200px" />
                </td>
            </tr>
            <tr>
                <td align="right">
                    可透支金额：
                </td>
                <td>
                     <input id="Creditline" name="Creditline" required="true" class="easyui-numberspinner form-control" value="0" data-options="min:0,increment:1" missingmessage="不能为空" style="width:100px"/>元(0 表示不可透支)
                </td>
            </tr>
           
        </table>
    </div>
    </form>
</div>
<div id="divParkSellerChargeBox" style="display: none">
    <form id="divParkSellerChargeBoxForm" class="easyui-form">
    <div title="商户充值" style="padding: 20px;">
        <input type="hidden" name="SellerID" id="hiddSellerID" />
        <table cellpadding="3" class="table_open_window_edit">
            <tr>
                <td align="right">
                    商家名称
                </td>
                <td>
                    <input id="chargeSellerName" name="SellerName" disabled="disabled"  class="easyui-validatebox form-control"  style="width: 200px" />
                </td>
            </tr>
           <tr>
                <td align="right">
                    当前余额（元）
                </td>
                <td>
                    <input id="Balance" name="Balance" disabled="disabled"  class="easyui-validatebox form-control" style="width: 200px" />
                </td>
            </tr>
            <tr>
                <td align="right">
                    充值金额（元）
                </td>
                <td>
                     <input id="chargeBalance" name="chargeBalance" required="true" class="easyui-numberspinner form-control" value="1" data-options="min:1,increment:1" missingmessage="不能为空" style="width:200px"/>
                </td>
            </tr>
           
        </table>
    </div>
    </form>
</div>
