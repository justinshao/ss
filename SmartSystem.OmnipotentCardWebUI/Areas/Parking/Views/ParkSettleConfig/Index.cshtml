@{
    ViewBag.Title = "车场管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="/Scripts/parking/parksettleconfig.js?v=1" type="text/javascript"></script>
<script src="/Scripts/easyui/tree-searh-extend.js" type="text/javascript"></script>
<div class="easyui-layout" style="height: 500px; width: 500px" fit="true">
    <div region="west" split="true" title="小区信息" style="width: 250px;">
        <div style="margin:5px 0px 5px 5px; text-align:left">
            <input type="text" id="txtSearchTreeContent" style="width:150px" class="my_textbox"/>&nbsp;<input type="button" style="width: 60px;height: 28px" value="搜索" class="easyui-linkbutton" onclick="btnSearchTreeContent()"/>
        </div>
        <ul id="villageTree">
        </ul>
    </div>
    <div region="center" title="车场信息" style="background: #eee;">
        <table fit="true" id="tableParkSettleConfig">
        </table>
    </div>
</div>
<div id="divParkSettleBox" style="display: none">
    <form id="divParkSettleBoxForm" class="easyui-form">
    <div title="车场结算配置" style="padding: 20px;">
         <input type="hidden" id="hiddPKID" name="PKID"/>
        <table cellpadding="3" class="table_open_window_edit" style="margin-top: -10px; margin-bottom: 5px;">
            <tr>
                <td align="right">
                    手续费率(‰)
                </td>
                <td>
                      <input id="txtHandlingFee" name="HandlingFee" required="true" class="easyui-numberspinner form-control" style="width:150px"
                                    value="0" data-options="min:0,increment:1,precision:1" missingmessage="不能为空" />元
                </td>
            </tr>
            <tr>
                 <td align="right">
                    最大提现金额
                </td>
                <td>
                       <input id="txtMaxAmountOfCash" name="MaxAmountOfCash" required="true" class="easyui-numberspinner form-control" style="width:150px" value="0" data-options="min:0,increment:1,precision:1" missingmessage="不能为空" />元
                </td>
            </tr>
            <tr>
                 <td align="right">
                    最小提现金额
                </td>
                <td>
                       <input id="txtMinAmountOfCash" name="MinAmountOfCash" required="true" class="easyui-numberspinner form-control" style="width:150px" value="0" data-options="min:0,increment:1,precision:1" missingmessage="不能为空" />元
                </td>
            </tr>
        </table>
    </div>
    </form>
</div>
