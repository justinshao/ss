@{
    ViewBag.Title = "意见反馈";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="/Scripts/DateExtensions.js" type="text/javascript"></script>
<script src="/Scripts/nweixin/opinionfeedback.js" type="text/javascript"></script>
<div class="easyui-layout" style="height: 500px; width: 500px" fit="true">
    <div region="west" split="true" title="单位信息" style="width: 250px;">
        <ul id="treeCompany">
        </ul>
    </div>
    <div region="center" title="意见反馈" style="padding: 2px;">
        <div style="margin: 2px 0px 3px 5px">
            &nbsp; &nbsp;<span style="font-size: 12px">反馈时间</span>：<input class="easyui-datetimebox"
                style="width: 150px; height: 25px" id="txtStartTime" />
            <span style="font-size: 12px">至</span>
            <input class="easyui-datetimebox" style="width: 150px; height: 25px" id="txtEndTime" />
            &nbsp; <a href="javascript:void(0)" id="btnQueryData" class="easyui-linkbutton" style="width: 50px;
                height: 28px">搜索</a>
        </div>
        <div style="height: 95%">
            <table fit="true" id="tableOpinionFeedback">
            </table>
        </div>
        <input type="hidden" id="hiddDefaultStartDate" value="@ViewBag.DefaultStartDate" />
        <input type="hidden" id="hiddDefaultEndDate" value="@ViewBag.DefaultEndDate" />
    </div>
</div>
