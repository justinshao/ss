@{
    ViewBag.Title = "小区管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="/Scripts/basedata/village.js?v=1" type="text/javascript"></script>
<script src="/Scripts/easyui/tree-searh-extend.js" type="text/javascript"></script>
<div class="easyui-layout" style="height: 500px; width: 500px" fit="true">
    <div region="west" split="true" title="单位信息" style="width: 250px;">
      <div style="margin:5px 0px 5px 5px; text-align:left">
            <input type="text" id="txtSearchTreeContent" style="width:150px" class="my_textbox"/>&nbsp;<input type="button" style="width: 60px;height: 28px" value="搜索" class="easyui-linkbutton" onclick="btnSearchTreeContent()"/>
        </div>
        <ul id="treeCompany"></ul>
    </div>
    <div region="center" title="小区信息" style="background: #eee;">
        <table fit="true" id="tableVillage">
        </table>
    </div>
</div>
<div id="divVillageBox" title="小区信息" style="display: none">
    <form id="divVillageBoxForm" class="easyui-form">
    <input type="hidden" name="VID" id="hiddVID" />
    <table cellpadding="3" style="padding: 20px;">
        <tr>
            <td align="right">
                小区编号
            </td>
            <td>
                <input id="VNo" name="VNo" required="true" class="easyui-validatebox  form-control" missingmessage="小区编号不能为空" style="width: 200px" />
            </td>
        </tr>
        <tr>
            <td align="right">
                小区名称
            </td>
            <td>
                <input id="VName" name="VName" required="true" class="easyui-validatebox  form-control" missingmessage="小区名称不能为空" style="width: 200px" />
            </td>
        </tr>
        <tr>
            <td align="right">
                所属公司
            </td>
            <td>
                <input id="CPID" lines="true" editable="false" required="true" name="CPID" style="width: 200px" />
            </td>
        </tr>
        <tr class="trAgentID" style="display:none">
            <td align="right">
                代理编号
            </td>
            <td>
                <input id="ProxyNo" name="ProxyNo" required="true" disabled="disabled" class="easyui-validatebox form-control" missingmessage="代理编号不能为空" style="width: 200px" />
            </td>
        </tr>
        <tr>
            <td align="right">
                联系人
            </td>
            <td>
                <input id="LinkMan" name="LinkMan" class="easyui-validatebox form-control" style="width: 200px" />
            </td>
        </tr>
        <tr>
            <td align="right">
                联系电话
            </td>
            <td>
                <input id="Mobile" name="Mobile" class="easyui-validatebox form-control" style="width: 200px" />
            </td>
        </tr>
        <tr>
            <td align="right">
                小区地址
            </td>
            <td>
             <input class="easyui-textbox" data-options="multiline:true"  name="Address" style="width:200px;height:40px"/>
            </td>
        </tr>
    </table>
    </form>
</div>
