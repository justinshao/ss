@{
    ViewBag.Title = "我的钱包";
    Layout = "~/Views/Shared/_WeiXinLayout.cshtml";
}
<script src="/Scripts/BaseSize.js?v=1" type="text/javascript"></script>
<link href="/Content/PurseAndCoupon.css" rel="stylesheet" type="text/css" />

<script type="text/javascript">
    function RedirectToActionPurseIndex() {
        location.href = "/PurseData/PurseIndex?balance=@ViewBag.Balance ";
    }
    function RedirectToActionMyCouponIndex() {
        location.href = "/PurseData/MyCouponIndex?a=-1";
    }
</script>

<div style=" font-size:1.5rem; background:#fff; margin-top:1rem; height:10.05rem;" class="purse">
    <div style=" margin-left:3rem; height:5.025rem; line-height:5.025rem; cursor:pointer;"   onclick="return RedirectToActionPurseIndex();"><span style=" font-size:1.5rem; color:#888888;" >余额</span><span class="yz">@ViewBag.Balance 元&nbsp;＞</span></div>
    <div style=" margin-left:3rem; height:5.025rem; line-height:5.025rem; border-top:1px solid #888888; cursor:pointer;" onclick="return RedirectToActionMyCouponIndex();"><span  style=" font-size:1.5rem; color:#888888;">优惠券</span><span class="yz">@ViewBag.CouponCount 张&nbsp;＞</span></div>
</div>
