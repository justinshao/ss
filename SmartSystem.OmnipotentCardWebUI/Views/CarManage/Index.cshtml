        </div>
        <div class="buttonright one">
            <input type="button" class="btnright" onclick="btnconfirmone(this,'@Model.Result[0].CarID','@Model.Result[0].LicensePlate')" value="确认" />
        </div>
    </div>
</div>  
}  
     
