@using SmartSystem.WeiXinServices.Payment;
@using Common.Entities.Order;
@model OnlineOrder
@{
    ViewBag.Title = "月卡续期支付";
    Layout = "~/Views/Shared/_WeiXinLayout.cshtml";
    WeiXinPaySignModel payModel = ViewBag.PayModel as WeiXinPaySignModel;
}

<div class="row">
    <div class="header">
        <div class="pull-left header-left">
            <a href="@Url.Action("Index", "H5CardRenewal")">
                <img src="/Content/mobile/images/return.png" width="15" height="26" alt="" /></a>
        </div>
        <div class="pull-right header-right">
            月卡续期支付</div>
    </div>
    <div class="top50">
    </div>
    <div class="weui_cells_title">
        续期信息</div>
    <div class="weui_cells">
        <div class="weui_cell">
            <div class="weui_cell_bd weui_cell_primary">
                <p>
                    续期编号</p>
            </div>
            <div class="weui_cell_ft">@Model.OrderID</div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_bd weui_cell_primary">
                <p>
                    车场名称</p>
            </div>
            <div class="weui_cell_ft">@Model.PKName</div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_bd weui_cell_primary">
                <p>
                    车牌号</p>
            </div>
            <div class="weui_cell_ft">@Model.PlateNo</div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_bd weui_cell_primary">
                <p>
                    续费月数</p>
            </div>
            <div class="weui_cell_ft">@Model.MonthNum.ToMonthDes()</div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_bd weui_cell_primary">
                <p>
                    支付金额</p>
            </div>
            <div class="weui_cell_ft">
                ¥ @Model.Amount 元</div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_bd weui_cell_primary">
                <p>
                    支付方式</p>
            </div>
            <div class="weui_cell_ft">
                微信支付</div>
        </div>
    </div>

    <div class="top20">
    </div>
    <a href="@ViewBag.MWeb_Url" id="getBrandWCPayRequest" class="weui_btn weui_btn_primary"> 立即支付</a>
</div>