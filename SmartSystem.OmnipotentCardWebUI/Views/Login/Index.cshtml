@using SmartSystem.OmnipotentCardWebUI.Models
@model UserLoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6 lt8"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7 lt8"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8 lt8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en" class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="UTF-8" />
        <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
        <title>智慧停车场管理平台</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
        <meta name="description" content="Login and Registration Form with HTML5 and CSS3" />
        <meta name="keywords" content="html5, css3, form, switch, animation, :target, pseudo-class" />
        <meta name="author" content="Codrops" />
        <link rel="stylesheet" type="text/css" href="/Content/login/css/demo.css" />
        <link rel="stylesheet" type="text/css" href="/Content/login/css/style.css" />
		<link rel="stylesheet" type="text/css" href="/Content/login/css/animate-custom.css" />
        <script src="/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    </head>
    <body>
     
        <div class="container">
            <header>
                <h1><span>智慧停车场管理平台</span></h1>
            </header>
            <section>				
                <div id="container_demo" >
                    <a class="hiddenanchor" id="tologin"></a>
                   
                    <div id="wrapper">
                        <div id="login" class="animate form">
                           @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { role = "form" }))
                           { 
                                <h1>用户登录</h1> 
                                <p> 
                                    <label for="username" class="uname" data-icon="u" > 用户名 </label>
                                    <input id="userAccount" name="userAccount" required="required" type="text" placeholder="请输入您的用户名"  value="@Model.UserAccount"/>
                                </p>
                                <p> 
                                    <label for="password" class="youpasswd" data-icon="p"> 用户密码 </label>
                                    <input id="password" name="password" required="required" type="password" placeholder="请输入您的登录密码" value="@Model.Password"/> 
                                </p>
                                <p class="keeplogin"> 
                                 @{string strchecked = Model.RememberPassword ? "checked=checked" : string.Empty;}
									<input type="checkbox" @strchecked id="chkRememberPassword" /> 
                                    <input type="hidden" id="hiddRememberPassword" name="rememberPassword" value="true" />
									<label for="loginkeeping">记住密码</label>
								</p>
                                <p class="login button"> 
                                  <span id="spanError" style="color:Red; float:left; margin-top:15px">@Model.ErrorMessage</span><input type="submit" value="登录" id="btnSubmit" style=" margin-bottom:0px"/> 
								</p>
                           }
                        </div>
                    </div>
                </div>  
            </section>
        </div>
    </body>
</html>
<script type="text/javascript">
    $(function () {
        $("#userAccount,#password").keydown(function () {
            $("#spanError").text("");
        });
        $("#btnSubmit").click(function () {
            if ($("#chkRememberPassword").is(':checked')) {
                $("#hiddRememberPassword").val("true");
            } else {
                $("#hiddRememberPassword").val("false");
            }
            return true;
        });
    });
</script>