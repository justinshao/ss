@using Common.Entities.Parking;
@model ParkMonthlyCarApply
@{
    ViewBag.Title = "拒绝月租车申请";
    Layout = "~/Views/Shared/_WeiXinLayout.cshtml";
}
<div class="row">
    <!--header-->
    <div class="header">
        <div class="pull-left header-left">
            <a href="@Url.Action("Index", "AdminAduitCarApply")">
                <img src="/Content/mobile/images/return.png" width="15" height="26" alt="" /></a>
        </div>
        <div class="pull-right header-right">
            拒绝月租车申请</div>
    </div>
    <div class="top50">
    </div>
    @using (Html.BeginForm("Refused", "AdminAduitCarApply", FormMethod.Post, new { id = "addorupdate_from" }))
    {
        <input type="hidden" id="hiddRecordID" name="RecordID" value="@Model.RecordID"/>
        <div class="weui_cells weui_cells_form" style="margin-top: -10px">
            <div class="weui_cell" style="margin-top: 0px">
                <div class="weui_cell_hd">
                    <label class="weui_label">
                        车场名称</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    @Model.PKName
                </div>
            </div>
            <div class="weui_cell" style="margin-top: 0px">
                <div class="weui_cell_hd">
                    <label class="weui_label">
                        车牌号</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    @Model.PlateNo
                </div>
            </div>
            <div class="weui_cell" style="margin-top: 0px">
                <div class="weui_cell_hd">
                    <label class="weui_label">
                        申请人姓名</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    @Model.ApplyName
                </div>
            </div>
            <div class="weui_cell" style="margin-top: 0px">
                <div class="weui_cell_hd">
                    <label class="weui_label">
                        申请人电话</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    <span>@Model.ApplyMoblie</span>
                </div>
            </div>
            <div class="weui_cell" style="margin-top: 0px">
                <div class="weui_cell_hd">
                    <label class="weui_label">
                        车位号</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    <span>@Model.PKLot</span>
                </div>
            </div>
            <div class="weui_cell" style="margin-top: 0px">
                <div class="weui_cell_hd">
                    <label class="weui_label">
                        家庭地址</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    <span>@Model.FamilyAddress</span>
                </div>
            </div>
            <div class="weui_cell" style="margin-top: 0px">
                <div class="weui_cell_hd">
                    <label class="weui_label">
                        申请备注</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    <span>@Model.ApplyRemark</span>
                </div>
            </div>
            @if(!string.IsNullOrWhiteSpace(Model.AuditRemark))
            { 
                <div class="weui_cell" style="margin-top: 0px">
                    <div class="weui_cell_hd">
                        <label class="weui_label">
                            上次拒绝原因</label></div>
                    <div class="weui_cell_bd weui_cell_primary">
                        <span style="color:Red">@Model.AuditRemark</span>
                    </div>
                </div>
            }
             </div>
        <div class="weui_cells_title">
            拒绝备注</div>
        <div class="weui_cells weui_cells_form">
            <div class="weui_cell">
                <div class="weui_cell_bd weui_cell_primary">
                    <textarea class="weui_textarea" id="txtAuditRemark" name="AuditRemark" placeholder="请输入备注(可不填)" rows="2"></textarea>
                </div>
            </div>
        </div>
        <div class="weui_actionsheet_action">
            <div class="btn-group btn-group-justified" role="group" aria-label="Justified button group" style="text-align: center">
                <a  href="@Url.Action("Index", "AdminAduitCarApply")" class="btn weui_btn weui_btn_mini weui_btn_default" style="height: 40px;
                    width: 47%; line-height: 40px;">返回</a> <a class="btn weui_btn weui_btn_mini weui_btn_primary"
                        style="height: 40px; width: 47%; line-height: 40px" onclick="return SubmitRefusedMonthlyCarApply()">确认拒绝</a>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    function SubmitRefusedMonthlyCarApply() {
        $("#addorupdate_from").submit();
    }
</script>
